{% extends "layout.html.twig" %}

{% block title %}Blog{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <section class="blog">
        <h1 class="blog__heading">Blog</h1>
        {% for post in posts %}
            <article class="post">
                <div class="post__header">
                    <h2 class="post__heading">{{ post.title }}</h2>
                    <p class="post__created">{{ post.created }} {{ post.author }}</p>
                    {% if not post.cover == null %}
                    <img class="post__cover" src="{{ post.cover }}">
                    {% endif %}
                </div>
                <p class="post__text">
                    {{ post.text | raw }}
                </p>
            </article>
        {% endfor %}
    </section>
{% endblock %}
