{% extends "layout.html.twig" %}

{% block title %}Sign up{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}

    {% if not user.isAuthenticated %}
        <div class="formholder">
            <form class="form form--shadow form--small" action="#" method="post">
                <input type="hidden" name="form[token]" value="{{ form['token'] }}">
                <input class="input input--simple" type="text" id="form_username" name="form[username]"
                       value="{{ form['username'] }}" placeholder="username">
                <input class="input input--simple" type="password" id="form_password" name="form[password]"
                       value="{{ form['password'] }}" placeholder="password">
                <input class="form__submit form__submit--blue" type="submit" id="form_submit" value="Sign up">
                <a class="form__link link link--thin" href="/login">Login</a>
            </form>
        </div>
    {% endif %}

{% endblock %}
