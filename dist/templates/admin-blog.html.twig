{% extends "layout.html.twig" %}

{% block title %}Admin{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}

        <section class="admin">
            {% include 'admin-aside.html.twig' %}

            <article class="admin__article">
                <h3 class="admin__header">
                    Blog posts
                    <span class="admin__button"><a href="blog/new">new Post</a></span>
                </h3>
                <table class="blogposts">
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>Date</th>
                    </tr>
                    {% for post in posts %}
                        <tr class="blogpost">
                            <td class="blogpost__title"><a href="blog/edit/{{ post.id }}">{{ post.title }}</a></td>
                            <td class="blogpost__author"><a href="blog/{{ post.author }}">{{ post.author }}</a></td>
                            <td class="blogpost__category"><a href="blog/{{ post.category }}">{{ post.category }}</a></td>
                            <td>{{ post.date|date("Y/m/d") }}</td>
                            <td><a class="blogpost__edit" href="blog/edit/{{ post.id }}">Edit</a></td>
                            <td><a class="blogpost__delete" href="blog/delete/{{ post.id }}">Delete</a></td>
                        </tr>
                    {% endfor %}
                </table>
              </article>
        </section>

{% endblock %}