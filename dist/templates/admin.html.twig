{% extends "layout.html.twig" %}

{% block title %}Admin{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}

{% if user.isAuthenticated() %}
    <section class="admindashboard">
        <aside class="adminaside">
            <ul>
                <li class="adminaside__nav"><a href="#">Blog</a></li>
                <li class="adminaside__nav"><a href="#">Projects</a></li>
            </ul>
        </aside>

        <article class="admindashboard__article">
            <h3>Blog posts</h3>
            <ul class="blogposts">                
                {% for post in posts %}
                    <li class="blogpost">
                        <a class="blogpost__title" href="admin/blog/edit/post/{{ post.id }}">{{ post.title }}</a>
                        <a class="blogpost__edit" href="admin/blog/edit/post/{{ post.id }}">Edit</a>
                        <a class="blogpost__delete" href="admin/blog/edit/post/{{ post.id }}">Delete</a>
                    </li>
                {% endfor %}
            </ul>
            <h3>Projects</h3>
            <ul class="projects">
                {% for project in projects %}
                {% endfor %}
            </ul>
        </article>
    </section>
{% else %}
    
    <div class="formholder">        
        <form class="form form--shadow form--small" action="/admin" method="post">
            <h2 class="form__header form__header--align form__header--weight form__header--blue">Admin-Login</h2>
            <input class="form__input form__input--simple" type="text" id="form_username" name="form[username]" value="{{ form['username'] }}" placeholder="username">
            <input class="form__input form__input--simple" type="password" id="form_password" name="form[password]" value="{{ form['password'] }}" placeholder="password">
            <input class="form__submit form__submit--blue" type="submit" id="form_submit" value="Login">
        </form>
    </div>

{% endif %}



{% endblock %}
