{% extends "layout.html.twig" %}

{% block title %}Admin{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}

        <section class="admin">
            {% include 'admin-aside.html.twig' %}

            <article class="admin__articles">
                <h2 class="admin__header">Most recent</h2>
                <div class="admin__article">
                    <h3><a class="link link--thick" href="admin/blog">Blog</a></h3>
                    {% for post in blog %}
                        <h4><a class="link link--thin" href="/blog/{{ post.title }}">{{ post.title }}</a></h4>
                        <p class="admin__text">{{ post.description }}</p>
                    {% endfor %}
                </div>
                
                <div class="admin__article">
                   <h3><a class="link link--thick" href="admin/projects">Projects</a></h3>
                    {% for post in projects %}
                        <h4><a class="link link--thin" href="/projects/{{ post.title }}">{{ post.title }}</a></h4>
                        <p class="admin__text">{{ post.description }}</p>
                    {% endfor %}
                </div>
            </article>


        </section>


{% endblock %}
