{% extends "layout.html.twig" %}

{% block title %}Settings{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <section class="admin">
        {% include 'admin-aside.html.twig' %}

        <article class="admin__articles">
            <h3 class="admin__header">
                Settings
            </h3>

            <div class="admin__article">
                <div class="admin__article-setting">
                    <h4 class="table__header">Tags</h4>
                    <table class="table table--settings">
                        {% for tag in tags %}
                            <tr>
                                <td class="table__row">{{ tag.name }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                    <form class="admin__form" action="" method="post">
                        <input class="input input--settings" type="text" name="tag" placeholder="new Tag"></input>
                        <input class="button button--blue" type="submit" value="Add"></input>
                    </form>
                </div>

                <div class="admin__article-setting">
                    <h4 class="table__header">Categories</h4>
                    <table class="table table--settings">
                        {% for category in categories %}
                            <tr>
                                <td class="table__row">{{ category.name }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                    <form class="admin__form" action="" method="post">
                        <input class="input input--settings" type="text" name="category"
                               placeholder="new Category"></input>
                        <input class="button button--blue" type="submit" value="Add"></input>
                    </form>
                </div>
        </article>
    </section>

{% endblock %}