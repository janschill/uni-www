{% extends "layout.html.twig" %}

{% block title %}Admin{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}

        <section class="admin">
            {% include 'admin-aside.html.twig' %}

            <article class="admin__article">
                <h3 class="admin__header">
                    {{ instance.instance }}
                    <span class="admin__button"><a href="{{ instance.instance }}/new">new Post</a></span>
                </h3>
                <table class="admin-posts admin-posts--blog">
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>Tags</th>                        
                        <th>Created</th>
                    </tr>
                    {% for post in posts %}
                        <tr class="admin-posts__post">
                            <td class="admin-posts__title">
                                <a href="{{ instance.instance }}/edit/{{ post.id }}">{{ post.title }}</a>
                                <p>{{ post.description }}</p>
                            </td>
                            <td class="admin-posts__author"><a href="{{ instance.instance }}/{{ post.author }}">{{ post.author }}</a></td>
                            <td class="admin-posts__category">
                                {% for category in post.category %}
                                    {{ category }}
                                    {% if not loop.last %}
                                    <span>,</span>
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td class="admin-posts__tags">
                                {% for tag in post.tags %}
                                    {{ tag }}
                                    {% if not loop.last %}
                                    <span>,</span>
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>{{ post.created|date("Y/m/d") }}</td>
                            <td><a class="admin-posts__delete" href="{{ instance.instance }}/delete/{{ post.id }}">Delete</a></td>
                        </tr>
                    {% endfor %}
                </table>

              </article>
        </section>

{% endblock %}