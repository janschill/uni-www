<!DOCTYPE html>
<html>

<head>
    {% block head %}
        <meta charset="UTF-8">
        <link rel="stylesheet" href="/css/combined.min.css"/>
        <script type="text/javascript" src="/js/main.js"></script>
        <title>{% block title %}{% endblock %}</title>
    {% endblock %}
</head>

<body>
<div class="wrapper">
    <header class="header">
        <span class="toggle-navigation">
            &#9776;
        </span>
        <nav class="nav nav--regular">
            <ul class="nav__list">
                <li class="nav__list-item current-item nav__item--regular"><a class="nav__link"href="/">JS</a></li>
                <li class="nav__list-item nav__item--regular"><a class="nav__link"href="/blog">Blog</a></li>
                <li class="nav__list-item nav__item--regular"><a class="nav__link"href="/projects">Projects</a></li>
                <li class="nav__list-item nav__item--regular"><a class="nav__link"href="/about">About</a></li>
            </ul>
        </nav>
        {% if user.isAuthenticated %}
        <nav class="nav nav--admin">
            <ul class="nav__list">
                {% if user.hasPermission('delete') %}
                <li class="nav__list-item nav__item--admin"><a href="/admin">Admin</a></li>
                {% endif %}
                <li class="nav__list-item nav__item--admin"><a href="/logout">Logout</a></li>
            </ul>
        </nav>
        {% endif %}
    </header>

    <div class="content">
        {% block content %}{% endblock %}
    </div>

    <footer class="footer">
        {% block footer %}
            <ul class="social">
                <li class="social__item"><a href="" class="social__link">Twitter</a></li>
                <li class="social__item"><a href="" class="social__link">Github</a></li>
            </ul>

        {% endblock %}
    </footer>


</div>
</body>
</html>
