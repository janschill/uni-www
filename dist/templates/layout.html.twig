<!DOCTYPE html>
<html>

<head>
  {% block head %}
  <link rel="stylesheet" href="/css/combined.min.css" />
  <script src="/js/jquery-3.2.1.min.js"></script>
  <script src="/js/main.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
  <title>{% block title %}{% endblock %}</title>
  {% endblock %}
</head>

<body>
  <div class="wrapper">
    <header>
      <nav class="nav nav--appear">
        <ul class"nav--active">
          <li class="current-item" class="nav__home"><a href="/">JS</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/projects">Projects</a></li>
          <li><a href="/about">About</a></li>
          {% if user.isAuthenticated() %}
            <li><a href="/admin/config">Admin</a></li>
          {% endif %}
        </ul>
          <a href="#" class="nav--toggle">&#9776;</a>
      </nav>
    </header>

    <div class="content">
        {% block content %}{% endblock %}
    </div>

    <footer class="footer">
      {% block footer %}
      <ul class="social">
        <li class="social__item"><a href="" class="social__link">Twitter</a></li>
        <li class="social__item"><a href="" class="social__link">Github</a></li>
      </ul>
      
      {% endblock %}
    </footer>


  </div>
</body>
</html>
