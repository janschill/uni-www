<!DOCTYPE html>
<html>

<head>
    {% block head %}
        <meta charset="UTF-8">
        <link rel="stylesheet" href="/css/combined.min.css"/>
        <script type="text/javascript" src="/js/main.js"></script>
        <title>{% block title %}{% endblock %}</title>
    {% endblock %}
</head>

<body>
<div class="wrapper">
    <header class="header">
        <span class="toggle-navigation">
            &#9776;
        </span>
        <nav class="nav nav--regular">
            <ul class="nav__list nav__list--regular">
                <li class="nav__list-item current-item nav__item--regular"><a class="nav__link" href="/">JS</a></li>
                <li class="nav__list-item nav__item--regular"><a class="nav__link" href="/blog">Blog</a></li>
                <li class="nav__list-item nav__item--regular"><a class="nav__link" href="/projects">Projects</a></li>
                <li class="nav__list-item nav__item--regular"><a class="nav__link" href="/about">About</a></li>
                {% if user.isAuthenticated %}
                    {% if user.hasPermission('delete') %}
                        <li class="nav__list-item nav__item--regular"><a class="nav__link" href="/admin">Admin</a></li>
                    {% endif %}
                    <li class="nav__list-item nav__item--regular"><a class="nav__link" href="/logout">Logout</a></li>
                {% endif %}                    
            </ul>
        </nav>
    </header>

    <div class="content">
        {% block content %}{% endblock %}
    </div>

    <footer class="footer">
        {% block footer %}
            <ul class="social">
                <li class="social__item"><a href="https://www.twitter.com/schill_jan" class="social__link">Twitter</a>
                </li>
                <li class="social__item"><a href="https://www.github.com/janschill" class="social__link">Github</a></li>
                <li class="social__item"><a href="/impressum" class="social__link">Impressum</a></li>
                {% if user.isAuthenticated %}
                    <li class="social__item"><a href="/documentation" class="social__link">Documentation</a></li>
                {% endif %}
            </ul>

        {% endblock %}
    </footer>


</div>
</body>
</html>
