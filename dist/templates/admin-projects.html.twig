{% extends "layout.html.twig" %}

{% block title %}Projects{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}

        <section class="admin">
            {% include 'admin-aside.html.twig' %}

            <article class="admin__article">
                <h3 class="admin__header">
                    Projects
                    <span class="admin__button"><a href="project/new">new Project</a></span>
                </h3>
                <table class="posts posts--project">
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>Tags</th>                        
                        <th>Created</th>
                    </tr>
                    {% for post in posts %}
                        <tr class="posts__post">
                            <td class="posts__title">
                                <a href="project/edit/{{ post.id }}">{{ post.title }}</a>
                                <p>{{ post.description }}</p>
                            </td>
                            <td class="posts__author"><a href="project/{{ post.author }}">{{ post.author }}</a></td>
                            <td class="posts__category">
                                {% for category in post.category %}
                                    {{ category }}
                                    {% if not loop.last %}
                                    <span>,</span>
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td class="posts__tags">
                                {% for tag in post.tags %}
                                    {{ tag }}
                                    {% if not loop.last %}
                                    <span>,</span>
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>{{ post.created }}</td>
                            {# <td>{{ post.created|date("Y/m/d") }}</td> #}
                            <td><a class="posts__delete" href="project/delete/{{ post.id }}">Delete</a></td>
                        </tr>
                    {% endfor %}
                </table>

              </article>
        </section>

{% endblock %}